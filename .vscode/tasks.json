{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate CMake",
      "type": "shell",
      "command": "cmake -B build -G Ninja -DCMAKE_BUILD_TYPE=Debug"
    },
    {
      "label": "Compile",
      "type": "shell",
      "command": "cmake --build build --config Debug --target MyApp"
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "cmake --build build --config Debug --target clean"
    }
  ]
}
